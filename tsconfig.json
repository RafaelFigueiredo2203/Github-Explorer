{
  "compilerOptions": {
       "target": "es5",                                
    "module": "commonjs",                           
     "lib": ["dom", "dom.iterable","esnext"],                                   
     "allowJs": true,                             
   "jsx": "react-jsx",                           
     "moduleResolution": "node",     
     "resolveJsonModule": true,    
     "isolatedModules": true,         
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                        
     "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  },
  "include": ["src"]
}
